{
  "text": "Review needed for PR opened by ${{ github.event.pull_request.user.login }}",
  "blocks": [
    {
      "type": "rich_text",
      "elements": [
        {
          "type": "rich_text_section",
          "elements": [
            {
              "type": "text",
              "text": "Review needed for PR opened by ${{ github.event.pull_request.user.login }}"
            }
          ]
        },
        {
          "type": "rich_text_section",
          "elements": [
            {
              "type": "usergroup",
              "usergroup_id": "${{ env.USER_GROUP_ID }}"
            },
            {
              "type": "text",
              "text": " Please review this PR: "
            },
            {
              "type": "link",
              "text": "${{ github.event.pull_request.title }}",
              "url": "${{ github.event.pull_request.html_url }}"
            }
          ]
        }
      ]
    },
    {
      "type": "section",
      "text": {
        "text": "⬡ ⬡ ⬡ *⏣* ⬡ ⬡ ⬡",
        "type": "mrkdwn"
      },
      "fields": [
        {
          "type": "mrkdwn",
          "text": "*repo*"
        },
        {
          "type": "mrkdwn",
          "text": "*workflow*"
        },
        {
          "type": "plain_text",
          "text": "${{ github.event.repository.name }}"
        },
        {
          "type": "plain_text",
          "text": "${{ github.event.workflow.name }}"
        }
      ]
    }
  ]
}
